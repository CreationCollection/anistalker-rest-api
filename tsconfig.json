{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "*",
                "src/types/*"
            ]
        }
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules/*"
    ]
}