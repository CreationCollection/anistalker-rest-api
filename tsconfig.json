    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "dist"
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules/*"
    ]
}